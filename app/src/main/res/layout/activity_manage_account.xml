<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setting.ManageAccountActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xui_config_color_blue"
        android:elevation="5dp">
        <TextView
            android:id="@+id/btmnavttl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="账户管理"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增账户"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="输入添加的账户"
            android:padding="10dp"
            android:layout_marginLeft="10dp"/>

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_confirm1"
            style="@style/Button.Primary.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改账户"
                android:textSize="16sp"/>

            <com.xuexiang.xui.widget.alpha.XUIAlphaButton
                android:id="@+id/btn_select_account"
                style="@style/Button.Primary.wrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:text="选择账户"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_edit_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:inputType="text"
                android:hint="输入修改后的账户"/>

            <com.xuexiang.xui.widget.alpha.XUIAlphaButton
                android:id="@+id/btn_confirm2"
                style="@style/Button.Primary.wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除账户"
            android:textSize="16sp" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_delete_account"
            style="@style/Button.Primary.wrap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择账户"
            android:layout_marginLeft="20dp"/>

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_confirm3"
            style="@style/Button.Primary.wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>
</LinearLayout>