<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".setting.ManageInCategoryActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        android:layout_gravity="left|start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:background="#CCC9C9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增一级分类"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_category"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:inputType="text"
            android:hint="输入添加的分类"
            android:background="#FAF5F5"
            android:padding="10dp"
            android:layout_marginLeft="10dp"/>

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_confirm1"
            style="@style/Button.Primary.wrap"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="#CCC9C9"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增二级分类"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_select_category"
            style="@style/Button.Primary.wrap"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="选择一级分类"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp">

            <EditText
                android:id="@+id/et_subcategory"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:inputType="text"
                android:hint="输入添加的分类"
                android:background="#FAF5F5"
                android:padding="10dp"/>

            <com.xuexiang.xui.widget.alpha.XUIAlphaButton
                android:id="@+id/btn_confirm2"
                style="@style/Button.Primary.wrap"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="确认"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:background="#CCC9C9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除一级分类"
            android:textSize="16sp" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_delete_category"
            style="@style/Button.Primary.wrap"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="选择一级分类"
            android:layout_marginLeft="20dp"/>

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_confirm3"
            style="@style/Button.Primary.wrap"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:background="#CCC9C9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除二级分类"
            android:textSize="16sp" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_delete_subcategory"
            style="@style/Button.Primary.wrap"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="选择二级分类"
            android:layout_marginLeft="20dp"/>

        <com.xuexiang.xui.widget.alpha.XUIAlphaButton
            android:id="@+id/btn_confirm4"
            style="@style/Button.Primary.wrap"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

</LinearLayout>